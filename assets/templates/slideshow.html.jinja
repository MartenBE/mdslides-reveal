<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="{{ revealjs_path }}/dist/reveal.css" />
        <link rel="stylesheet" href="{{ revealjs_path }}/dist/theme/white.css" />
    </head>
    <body>
        <div class="reveal">
            <div class="slides">
                <section data-markdown>
                    <textarea data-template>
                        {{ markdown }}
                    </textarea>
                </section>
            </div>
        </div>
        <script src="{{ revealjs_path }}/dist/reveal.js"></script>
        <script src="{{ revealjs_path }}/plugin/markdown/markdown.js"></script>
        <script>
            Reveal.initialize({
                plugins: [RevealMarkdown],
            });
        </script>
    </body>
</html>
